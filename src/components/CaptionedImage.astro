---
import {Image} from "astro:assets";

interface Props {
    image: any;
    alt: string;
    caption: string;
}

const {image, alt, caption} = Astro.props;

---

<figure class="w-full">
    <Image src={image} alt={alt}/>
    <figcaption class="text-sm text-center">{caption}</figcaption>
</figure>