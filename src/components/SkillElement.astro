---
import {Icon} from 'astro-icon/components'

interface Props {
    icon: string;
    title: string;
    darkIcon?: string;
}

const {icon, title, darkIcon} = Astro.props;
const dark = darkIcon || icon;
const hasDark = dark !== icon;
---

<div class="flex flex-col items-center hover:scale-110 transition-transform duration-100">
    {hasDark ?
            <>
                <Icon name={icon} class="h-16 w-auto min-w-16 mb-2 dark:hidden"/>
                <Icon name={dark} class="h-16 w-auto mb-2 not-dark:hidden"/>
            </>
        :
            <Icon name={icon} class="h-16 w-auto mb-2"/>
    }
    <span class="text-center font-bold">{title}</span>
</div>